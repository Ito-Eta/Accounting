<h1>Register</h1>

<%= form_with scope: :users, url: users_path, local: true do |form| %>
  <p>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
	<br>
	<br>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
	<br>
	<br>
    <%= form.label :email %>
    <%= form.text_field :email %>
	<br>
	<br>
    <%= form.label :password %>
    <%= form.password_field :encrypted_password %>
	<br>
	<br>
    <%= form.submit('Register') %>
  </p>
<% end %>
